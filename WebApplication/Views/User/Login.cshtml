@{
	ViewData["Title"] = "Inicio de Sesión";
	Layout = "_VoidLayout";
}

<!-- Default form login -->
<form class="text-center border border-light p-5" action="Login" method="post" style="width:40%; position:center;">
	<p class="h4 mb-4">Sign in</p>
	<!-- Email -->
	<input type="text" name="username" required maxlength="20" class="form-control mb-4" placeholder="Username">
	<!-- Password -->
	<input type="password" name="password" required maxlength="20" class="form-control mb-4" placeholder="Password">
	<!-- Sign in button -->
	<button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

</form>
<!-- Default form login -->